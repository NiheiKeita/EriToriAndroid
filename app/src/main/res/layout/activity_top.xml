<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="エリとり！"
            android:layout_marginTop="90dp"
            android:textSize="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/sum_solved_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今まで解いた数：8 問"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/top_ta_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/top_ta_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="あなたのTA記録：20 秒"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/mode_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sum_solved_text" />




        <TextView
            android:id="@+id/explanation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ルール説明"
            android:textSize="30dp"
            android:textColor="#3399FF"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/game_list_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_ta_text" />

        <TextView
            android:id="@+id/game_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ゲームを開始する"
            android:textSize="30dp"
            android:textColor="#3399FF"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ranking_register_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/explanation_button" />
        <TextView
            android:id="@+id/ranking_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ランキング登録"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/ranking_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_list_button" />
        <TextView
            android:id="@+id/ranking_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ランキング(開発中)"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ranking_register_button" />

</androidx.constraintlayout.widget.ConstraintLayout>